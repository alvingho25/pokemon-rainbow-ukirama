<div class="container container-border">
    <%= form_for @trainer do |f| %>
        <div class="row form-header">
            <h2 class="mx-auto">New Trainer</h2>
        </div>
        <%= render 'layouts/error_messages', object: @trainer %>
        
        <div class="form-row form-group">
            <div class="col-2">
                <%= f.label :name, class: "col-form-label" %>
            </div>
            <div class="col-10">
                <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>

        <div class="form-row form-group">
            <div class="col-2">
                <%= f.label :email, class: "col-form-label" %>
            </div>
            <div class="col-10">
                <%= f.email_field :email, class: 'form-control' %>
            </div>
        </div>

        <div class="form-row form-group">
            <div class="col-2">
                <%= f.label :password, class: "col-form-label" %>
            </div>
            <div class="col-10">
                <%= f.password_field :password, class: 'form-control' %>
            </div>
        </div>

        <div class="row form-footer">
            <%= f.submit "Create", class: "btn btn-primary btn-block", :style => 'margin-top: 14px' %>
        </div>
    <% end %>
</div>