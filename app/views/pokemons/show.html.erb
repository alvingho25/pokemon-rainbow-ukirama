<div class="container container-border">
    <div class="row form-header">
        <h2 class="mx-auto"><%= @pokemon.name %></h2>
    </div>
    <div class="row" style="padding-top: 10px">
        <div class="col-md-5">
            <%= image_tag @pokemon.pokedex.image_url%>
        </div>
        <div class="col-md-7">
            <div class="row">
                <div class="col-md-6">
                    <h3>Level </h3>
                </div>
                <div class="col-md-6">
                    <h3>: <%= @pokemon.level %></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>Health Point</h3>
                </div>
                <div class="col-md-6">
                    <h3>: <%= @pokemon.current_health_point %>/ <%= @pokemon.max_health_point %></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>Attack </h3>
                </div>
                <div class="col-md-6">
                    <h3>: <%= @pokemon.attack %></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>Defence </h3>
                </div>
                <div class="col-md-6">
                    <h3>: <%= @pokemon.defence %></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>Speed </h3>
                </div>
                <div class="col-md-6">
                    <h3>: <%= @pokemon.speed %></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>Current Experience </h3>
                </div>
                <div class="col-md-6">
                    <h3>: <%= @pokemon.current_experience %></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>Pokedex </h3>
                </div>
                <div class="col-md-6">
                    <h3>: <%= link_to @pokemon.pokedex.name, pokedex_path(@pokemon.pokedex) %></h3>
                </div>
            </div>
        </div>
    </div>
    <div class="row form-footer">
        <div class="col-md-7 offset-md-5" style="padding-bottom: 10px">
            <%= link_to "Edit Pokemon", edit_pokemon_path(@pokemon), class: "btn btn-primary btn-size" %>
            <%= link_to "Delete Pokemon", pokemon_path(@pokemon), method: :delete, data: { confirm: "You sure?" } , class: "btn btn-danger btn-size" %>
            <%= link_to "Back", pokemons_path, class: "btn btn-info btn-size" %>
        </div>
    </div>
</div>