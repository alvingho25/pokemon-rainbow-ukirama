<div class="container">
    <div class="card" style="margin-top: 15px; margin-bottom: 20px">
        <%= form_for @pokemon_battle do |f| %>
        <div class="card-header">
            <div class="row">
                <h2 class="mx-auto">Select Pokemon</h2>
            </div>
            <%= render 'layouts/error_messages', object: @pokemon_battle %>
        </div>
        <div class="card-body">
            <div class="form-row form-group">
                <div class="col-6 text-center">
                    <%= f.label :pokemon1_id, class: "col-form-label" %>
                </div>
                <div class="col-6 text-center">
                    <%= f.label :pokemon2_id, class: "col-form-label" %>
                </div>
            </div>

            <div class="form-row form-group">
                <div class="col-6">
                    <%= f.select :pokemon1_id, @pokemons, {}, class: "form-control" %>
                </div>
                <div class="col-6">
                    <%= f.select :pokemon2_id, @pokemons, {}, class: "form-control" %>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-4">
                    <%= f.submit "Manual", class: "btn btn-primary btn-block", :style => 'margin-top: 14px' %>
                </div>
                <div class="col-md-4">
                    <%= f.submit "vs AI", class: "btn btn-primary btn-block", :style => 'margin-top: 14px' %>
                </div>
                <div class="col-md-4">
                    <%= f.submit "Auto", class: "btn btn-primary btn-block", :style => 'margin-top: 14px' %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>