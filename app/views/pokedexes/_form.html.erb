<style>
    .field_with_errors { display: none; }
</style>
<%= form_for @pokedex, html: {class: "form-inline"}  do |f| %>
    <%= f.label :name, class: 'col-md-3' %>
    <%= f.text_field :name, class: 'form-control col-md-9' %>

    <%= f.label :base_health_point, class: 'col-md-3' %>
    <%= f.number_field :base_health_point, class: 'form-control col-md-9' %>
    
    <%= f.label :base_attack, class: 'col-md-3' %>
    <%= f.number_field :base_attack, class: 'form-control col-md-9' %>

    <%= f.label :base_defence, class: 'col-md-3' %>
    <%= f.number_field :base_defence, class: 'form-control col-md-9' %>

    <%= f.label :base_speed, class: 'col-md-3' %>
    <%= f.number_field :base_speed, class: 'form-control col-md-9' %>
    
    <%= f.label :element_type, class: 'col-md-3' %>
    <%= f.text_field :element_type, class: 'form-control col-md-9' %>

    <%= f.label :image_url, class: 'col-md-3' %>
    <%= f.url_field :image_url, class: 'form-control col-md-9' %>
    
    <%= f.submit "Submit", class: "btn btn-primary btn-block", :style => 'margin-top: 14px' %>
    <%= link_to "Back", pokedexes_path, class: "btn btn-info btn-block", :style => 'margin-top: 14px' %>
<% end %>