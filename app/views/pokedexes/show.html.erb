<div class="container">
    <div>
        <%= link_to "Edit Pokedex", edit_pokedex_path(@pokedex), class: "btn btn-primary btn-size" %>
        <%= link_to "Delete Pokedex", pokedex_path(@pokedex), method: :delete, data: { confirm: "You sure?" } , class: "btn btn-danger btn-size" %>
    </div>
    <div class="card border-primary" style="margin-top: 15px; margin-bottom: 20px">
        <div class="card-header bg-primary text-white text-center"><%= @pokedex.name %></div>
        <div class="card-body">
            <div class="row" style="padding-top: 10px">
                <div class="col-md-5">
                    <%= image_tag @pokedex.image_url%>
                </div>
                <div class="col-md-7">
                    <br><br><br>
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Base Health Point </h3>
                        </div>
                        <div class="col-md-6">
                            <h3>: <%= @pokedex.base_health_point %></h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Base Attack </h3>
                        </div>
                        <div class="col-md-6">
                            <h3>: <%= @pokedex.base_attack %></h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Base Defence </h3>
                        </div>
                        <div class="col-md-6">
                            <h3>: <%= @pokedex.base_defence %></h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Base Speed </h3>
                        </div>
                        <div class="col-md-6">
                            <h3>: <%= @pokedex.base_speed %></h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Element </h3>
                        </div>
                        <div class="col-md-6">
                            <h3>: <%= @pokedex.element_type %></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>