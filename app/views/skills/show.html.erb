<div class="container container-border">
    <h2 class="text-center" style="padding-top: 10px">Skills</h2>
    <div class="row">
        <div class="col-md-6">
            <h2>Name </h2>
        </div>
        <div class="col-md-6">
            <h2>: <%= @skill.name %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Power </h2>
        </div>
        <div class="col-md-6">
            <h2>: <%= @skill.power %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Max PP </h2>
        </div>
        <div class="col-md-6">
            <h2>: <%= @skill.max_pp %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Element </h2>
        </div>
        <div class="col-md-6">
            <h2>: <%= @skill.element_type %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7 offset-md-5" style="padding-bottom: 10px">
            <%= link_to "Edit Skill", edit_skill_path(@skill), class: "btn btn-primary btn-size" %>
            <%= link_to "Delete Skill", skill_path(@skill), method: :delete, data: { confirm: "You sure?" } , class: "btn btn-danger btn-size" %>
            <%= link_to "Back", skills_path, class: "btn btn-info btn-size" %>
        </div>
    </div>
    
</div>