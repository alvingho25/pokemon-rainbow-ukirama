<div class="container container-border">
    <div class="row form-header">
        <h2 class="mx-auto">Skill</h2>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Name </h2>
        </div>
        <div class="col-md-6">
            <h2>: <%= @skill.name %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Power </h2>
        </div>
        <div class="col-md-6">
            <h2>: <%= @skill.power %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Max PP </h2>
        </div>
        <div class="col-md-6">
            <h2>: <%= @skill.max_pp %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>Element </h2>
        </div>
        <div class="col-md-6">
            <h2>: <%= @skill.element_type %></h2>
        </div>
    </div>
    <div class="row form-footer" style="padding-bottom: 10px">
        <div class="mx-auto">
            <%= link_to "Edit Skill", edit_skill_path(@skill), class: "btn btn-primary btn-size" %>
            <%= link_to "Delete Skill", skill_path(@skill), method: :delete, data: { confirm: "You sure?" } , class: "btn btn-danger btn-size" %>
        </div>
    </div>
    
</div>